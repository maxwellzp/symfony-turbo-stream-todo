<li
        id="todo_{{ todo.id }}"
        class="list-group-item d-flex justify-content-between align-items-center"
>
    {{ todo.task }}
    <form method="post" action="{{ path('remove_todo', {'id': todo.id}) }}">
        <input type="hidden" name="_token" value="{{ csrf_token('remove' ~ todo.id) }}">
        <button class="btn btn-sm btn-outline-danger">Delete</button>
    </form>
</li>
